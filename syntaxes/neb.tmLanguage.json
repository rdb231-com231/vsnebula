{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Nebula",
	"scopeName": "source.nebula",
	"patterns": [
	  {"include": "#comments"},
	  {"include": "#stdlibs-special"},
	  {"include": "#functions"},
	  {"include": "#strings"},
	  {"include": "#numbers"},
	  {"include": "#keywords"},
	  {"include": "#operators"},
	  {"include": "#error-handling"},
	  {"include": "#punctuation"},
	  {"include": "#identifiers"}
	],
	"repository": {
	  "stdlibs-special": {
		"name": "keyword.other.stdlibs.nebula",
		"match": "\"(stdlibs|listas|math|arquivos)\""
	  },
	  "keywords": {
		"name": "keyword.control.nebula",
		"match": "\\b(função|retornar|fim|se|então|senão|mas|enquanto|caminhando|até|mudando|faça|conferir|usando|detalhes|levantar|como|e|ou|não|igual|declarar|constante|importar|de|para|cada|em)\\b"
	  },
	  "functions": {
		"patterns": [
		  {
			"name": "meta.function.declaration.nebula",
			"match": "(função)\\s+([a-zA-Z_áéíóúãâêôãõçÁÉÍÓÚÃÂÊÔÃÕÇ][a-zA-Z0-9_áéíóúãâêôãõçÁÉÍÓÚÃÂÊÔÃÕÇ]*)",
			"captures": {
			  "1": {"name": "keyword.function.nebula"},
			  "2": {"name": "entity.name.function.nebula"}
			}
		  },
		  {
			"name": "support.function.builtin.nebula",
			"match": "\\b(falar|pegar|type|python|eval|ler_arquivo|escrever_arquivo|aleatório|\\.fatiar|len|\\.escrever|\\.ler|\\.mudar|\\.procurar|\\.colocar|\\.estourar|perguntar|input_int|número|string|lista|func|\\.picotar|limpar|\\.extender|quadrado|cubo|raiz|max|min|média|soma|\\.chaves|update|\\.itens|\\.valores|clicommand|executar)\\b"
		  }
		]
	  },
	  "strings": {
		"name": "string.quoted.double.nebula",
		"begin": "\"",
		"end": "\"",
		"patterns": [
		  {"include": "#stdlibs-special"},
		  {"include": "#interpolation"},
		  {
			"name": "constant.character.escape.nebula",
			"match": "\\\\(\\\\|n|t|r|$|\")"
		  }
		]
	  },
	  "interpolation": {
		"name": "meta.embedded.line.interpolation.nebula",
		"begin": "\\$\\{",
		"end": "\\}",
		"contentName": "meta.embedded.line.interpolation.nebula",
		"patterns": [
		  {"include": "#identifiers"},
		  {"include": "#expressions"}
		]
	  },
	  "identifiers": {
		"name": "variable.other.nebula",
		"match": "\\b[a-zA-Z_áéíóúãâêôãõçÁÉÍÓÚÃÂÊÔÃÕÇ][a-zA-Z0-9_áéíóúãâêôãõçÁÉÍÓÚÃÂÊÔÃÕÇ]*\\b"
	  },
	  "expressions": {
		"patterns": [
		  {"include": "#numbers"},
		  {"include": "#operators"},
		  {"include": "#functions"},
		  {"include": "#keywords"}
		]
	  },
	  "numbers": {
		"name": "constant.numeric.neb",
		"match": "-?\\d+(\\.\\d+)?"
	  },
	  "comments": {
		"name": "comment.line.neb",
		"match": "#.*"
	  },
	  "operators": {
		"name": "keyword.operator.neb",
		"match": "\\+|-|\\*|/|\\^|=|==|!=|<|>|<=|>=|->|\\b(igual)\\b"
	  },
	  "error-handling": {
		"patterns": [
		  {
			"name": "keyword.error.neb",
			"match": "\\b(conferir|levantar)\\b"
		  },
		  {"include": "#strings"}
		]
	  },
	  "punctuation": {
		"patterns": [
		  {"name": "punctuation.parenthesis.neb", "match": "[()]"},
		  {"name": "punctuation.bracket.neb", "match": "[\\[\\]]"},
		  {"name": "punctuation.comma.neb", "match": ","},
		  {"name": "punctuation.semicolon.neb", "match": ";"},
		  {"name": "punctuation.dot.neb", "match": "\\."},
		  {"name": "punctuation.faça-fim.neb", "match": "\\b(faça.fim)\\b"},
		  {"name": "punctuation.então-fim.neb", "match": "\\b(então.fim)\\b"}
		]
	  }
	}
  }